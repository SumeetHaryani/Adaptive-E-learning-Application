<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
<!-- Font Awesome -->
<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.0/css/all.css">
<!-- Bootstrap core CSS -->
<link href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.3.1/css/bootstrap.min.css" rel="stylesheet">
<!-- Material Design Bootstrap -->
<link href="https://cdnjs.cloudflare.com/ajax/libs/mdbootstrap/4.7.4/css/mdb.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">

    <title>E-Learning</title>

</head>

<body>
    <nav class="navbar  navbar-expand-lg navbar-dark primary-color">
        <a class="navbar-brand" href="/">
            <i class="material-icons" style="color:aqua">
                school
            </i>
            E-Learning
        </a>
        <ul class="nav navbar-nav mr-auto">
            <li class="nav-item">
                <a class="nav-link" href="/courses">Courses</a>
            </li>
        </ul>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
            aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">

            <ul class="navbar-nav ml-auto">
                
                <% if(!currentUser){ %>
                <li class="nav-item">
                    <a class="nav-link" href="/register"><span class="fas fa-user"></span> Sign Up</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/login"><span class="fas fa-sign-in-alt"></span> Login</a>
                </li>
                <% } else { %>
                    <li class="nav-item avatar">
        <a class="nav-link" href="/student">
          <img src="https://avatars.dicebear.com/v2/male/john.svg?options[mood][]=happy" class="rounded-circle z-depth-0" alt="avatar image" height="35">
          Signed In As
          <%= currentUser.firstName %>
        </a>
      </li>
               
                <li class="nav-item">
                    <a class="nav-link" href="/logout"><span class="fas fa-sign-in-alt"></span> Log out</a>
                </li>
                <% } %>

            </ul>
        </div>
    </nav>
    