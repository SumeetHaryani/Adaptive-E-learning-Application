      x.style.color="green";
      x.innerHTML="Completed  <%= subtopicDetails.subtopicName %> !"+z;

    }
  } 
  $("#form").submit( function(eventObj) {
      $('<input />').attr('type', 'hidden')
          .attr('name', "percent")
          .attr('value',percent)
          .appendTo('#form');
      return true;
  });
</script>








