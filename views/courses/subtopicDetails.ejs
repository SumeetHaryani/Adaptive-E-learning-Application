<div class="container">

  <main role="main" class="col-md-9 ml-sm-auto col-lg-10">
    <div class="progress">
      <div id="p1" class="progress-bar  progress-bar-striped progress-bar-animated" role="progressbar" aria-valuenow="40"
        aria-valuemin="0" aria-valuemax="100" style="width:0%">

      </div>
    </div>
    <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pb-2 mb-3 border-bottom">

      <h1 class="h2">
        <%= subtopicDetails.subtopicName %>
      </h1>

    </div>


    <iframe id="player" width="100%" height="60%" src="https://www.youtube.com/embed/<%= subtopicDetails.videolink %>?enablejsapi=1"
