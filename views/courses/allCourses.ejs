<div id="frm" class="container">
    <!--Search Bar-->
    <h1>Enter Course Name</h1>
    <form class="form-inline justify-content-center" method="GET" action="/courses">
        <input id="search" class="form-control mr-sm-2" name="courses" type="text" placeholder="Enter Course name" size="50">
        <button class="btn btn-dark  my-2 my-sm-0" type="submit">Search</button>
    </form>

</div>
</div>
<br>
<div class="container">
    <% allCourses.forEach((course)=>{ %>
        <div class="card">
          <div class="card-header">
            <%= course.courseName.toUpperCase() %>
          </div>
          <div class="card-body">
            <p class="card-text"><%= course.description %></p>
            <blockquote class="blockquote mb-0">
              <footer class="blockquote-footer">Created by <%= course.creator %> </footer>
            </blockquote>
            <% if(currentUser && currentUser.courses.length > 0){ %>
                <% currentUser.courses.forEach(course=>{ %>
                    <% if(course._id == course._id){ %>
                        <a href="/courses/<%= course._id %>" class="btn btn-primary">Proceed To Course</a>
                    <% }else{ %>
                        <a href="/courses/<%= course._id %>/survey" class="btn btn-primary">Enroll</a>

                    <% } %>
                <% }) %>
            <% }else if(currentUser && currentUser.courses.length === 0 ){ %>
                <a href="/courses/<%= course._id %>/survey" class="btn btn-primary">Enroll</a>
            <% }else{ %>
                <a href="/login" class="btn btn-primary">Enroll</a>
            <% } %>

          </div>
        </div>
      <% }); %>
      <hr> 

</div>













